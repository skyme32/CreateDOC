<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Text text="Genera documentos DOC"
          GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

    <Label text="Path Template:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="inputTemplate" GridPane.columnIndex="1" GridPane.rowIndex="1" id="text" prefWidth="250"/>
    <Button text="Path" GridPane.columnIndex="2" GridPane.rowIndex="1" onAction="#handleSubmitPathTemplate"/>

    <Label text="Path Desti:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="inputPath" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Button text="Path" GridPane.columnIndex="2" GridPane.rowIndex="2" onAction="#handleSubmitPathdesti"/>

    <Label text="Path Jobs:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="inputFiles" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button text="Path" GridPane.columnIndex="2" GridPane.rowIndex="3" onAction="#handleSubmitPathFiles"/>

    <Label text="Environment:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="env_var" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Environment:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="env_var2" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Environment:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="env_var3" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Label text="Environment:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <TextField fx:id="env_var4" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <Button text="Path" GridPane.columnIndex="1" GridPane.rowIndex="8" prefWidth="150" onAction="#handleSubmitButtonAction"/>

    <TextArea fx:id="feedback" prefHeight="300" prefWidth="250" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="3"/>



</GridPane>